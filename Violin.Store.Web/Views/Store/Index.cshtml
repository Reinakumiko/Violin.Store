@using Violin.Store.Classes;
@model IEnumerable<Goods>

@{
	Layout = "~/Views/Shared/_LayoutHeaderSection.cshtml";
	ViewBag.Title = "Index";
}


<div class="container" style="margin-top: 120px;">
	<div class="productBlocks">
		<div class="blockTitle">好货商城</div>
		<div class="blockProductList">

			@foreach (var product in Model)
			{
				<a href="/Store/Detail/@product.ProductId" class="productDetailLink">
					<div class="productItem">
						<div class="productPreview">
							<img src="~/Content/img/@product.ImageUrl" />
						</div>
						<div class="productTitle">@product.Name</div>
						<div class="productPrice">
							<span>￥</span>
							<span class="amount">@product.Price</span>
						</div>
					</div>
				</a>
			}
		</div>
	</div>
</div>