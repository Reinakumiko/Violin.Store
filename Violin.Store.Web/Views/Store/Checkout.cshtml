				<div class="blockItems">
					<div class="selectBox">
						<input type="checkbox" class="selectItem" name="selectItem" data-cart="@item.CartId" data-price="@(item.Goods.Price * item.Quantity)" />
					</div>
					<div class="items itemPreview">
						<img class="previewImage" src="~/Content/img/@item.Goods.ImageUrl" />
					</div>
					<div class="itemDetails">
						<div class="items itemTitle">
							@item.Goods.Name
						</div>
						<div class="items itemDescription">
							@item.Goods.Note
						</div>
						<div class="items itemPrices">
							<span>¥</span>
							<span class="amount">@item.Goods.Price</span>
							<small>
								<span>x</span>
								<span>@item.Quantity</span>
							</small>
						</div>
					</div>
					<div class="itemControl">
						<button type="button" class="buttonRemove" data-cart="@item.CartId" onclick="RemoveItem(this)">
							<i class="fa fa-trash-o" aria-hidden="true"></i>
							<span class="buttonText">移除</span>
						</button>
					</div>
				</div>
			}

