@model IEnumerable<Violin.Store.Classes.IncludedTracks>

@{
	ViewBag.Title = "Index";
}

<h2>曲目列表</h2>

<p>
	@Html.ActionLink("新建条目", "Create", null, new { role = "button", @class = "btn btn-primary" })
	<a href="/" role="button" class="btn btn-info" style="margin-left: 10px;">返回主页</a>
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Discography)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LyricsBy)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Composer)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Arranger)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Discography.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LyricsBy)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Composer)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Arranger)
			</td>
			<td>
				@Html.ActionLink("编辑", "Edit", new { id = item.Track }) |
				@Html.ActionLink("详情", "Details", new { id = item.Track }) |
				@Html.ActionLink("删除", "Delete", new { id = item.Track }, new { role = "button", @class = "btn btn-danger btn-xs" })
			</td>
		</tr>
	}

</table>
