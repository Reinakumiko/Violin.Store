@using Violin.Store.Tools;
@using Violin.Store.Classes;

@model Orders

@{
    ViewBag.Title = "移除 · 订单";
}

<div>
	<h2>移除订单</h2>
    <h4>确定要移除这条订单信息吗?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
			@Model.State.GetDisplayName()
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
			<input type="submit" value="删除条目" class="btn btn-danger" disabled="disabled" />
			<a href="../" role="button" class="btn btn-default" style="margin-left: 10px;">返回列表</a>
        </div>
    }
</div>
