@using Violin.Store.Classes;
@model IEnumerable<Discography>

@{
    ViewBag.Title = "Index";
}

<h2>专辑列表</h2>

<p>
    @Html.ActionLink("新建条目", "Create", null, new { role = "button", @class = "btn btn-primary" })
	<a href="/" role="button" class="btn btn-info" style="margin-left: 10px;">返回主页</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnSaleTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OnSaleTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
			@Html.ActionLink("编辑", "Edit", new { id = item.DiscographyId }) |
			@Html.ActionLink("详情", "Details", new { id = item.DiscographyId }) |
			@Html.ActionLink("删除", "Delete", new { id = item.DiscographyId }, new { role = "button", @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
