<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
	<script src="~/Scripts/jquery-1.11.0.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>

	<!-- 文本编辑器部分样式 -->
	<link rel="stylesheet" href="~/Content/froala-editor/css/froala_editor.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/froala_style.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/code_view.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/colors.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/emoticons.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/image_manager.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/image.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/line_breaker.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/table.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/char_counter.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/video.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/fullscreen.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/file.css">
	<link rel="stylesheet" href="~/Content/froala-editor/css/plugins/quick_insert.css">
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Yamamoto Sayaka", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav"></ul>
			</div>
		</div>
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

</body>
</html>

<!-- 文本编辑器部分脚本 -->
