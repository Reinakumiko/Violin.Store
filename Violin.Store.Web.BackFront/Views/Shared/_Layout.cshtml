<script>
	$(document).ready(function () {
		$("#edit").froalaEditor({
			language: 'zh_cn',
			// Set the image upload URL.
			imageUploadURL: '/Image/Upload',
			imageManagerLoadURL: '/Image/Load',
			imageManagerDeleteURL: "/Image/Delete",
		});
	});
</script>