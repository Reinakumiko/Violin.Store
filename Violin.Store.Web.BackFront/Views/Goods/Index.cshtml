@model IEnumerable<Violin.Store.Classes.Goods>

@{
    ViewBag.Title = "Index";
}

<h2>商品列表</h2>

<p>
	@Html.ActionLink("新建条目", "Create", null, new { role = "button", @class = "btn btn-primary" })
	<a href="/" role="button" class="btn btn-info" style="margin-left: 10px;">返回主页</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.ImageUrl)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.State)
		</th>
        <th>
			操作
		</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.ImageUrl)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.State)
		</td>
        <td>
			@Html.ActionLink("编辑", "Edit", new { id = item.ProductId }) |
			@Html.ActionLink("详情", "Details", new { id = item.ProductId }) |
			@Html.ActionLink("删除", "Delete", new { id = item.ProductId }, new { role = "button", @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
